{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python -c "from app import app; import uvicorn; uvicorn.run(app, host='0.0.0.0', port=int(__import__('os').getenv('PORT', 8000)))",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
